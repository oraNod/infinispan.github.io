<indexing storage="filesystem" path="/temp">
   <index-writer commit-interval="2000" low-level-trace="false" max-buffered-entries="32" queue-count="1"
                 queue-size="10000" ram-buffer-size="400" thread-pool-size="2">
      <index-merge calibrate-by-deletes="true" factor="3" max-entries="2000" min-size="10" max-size="20"/>
   </index-writer>
   <indexed-entities>
      <indexed-entity>org.infinispan.sample.Book</indexed-entity>
   </indexed-entities>
</indexing>